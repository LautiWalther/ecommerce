<%- include("./menu", {title: "Ecommerce" }) %>
<style>
	.row {
		width: 100%;
		margin: 0;
	}
</style>


    <div class="site-blocks-cover" style="background-image: url(/public/images/hero_1.png);" data-aos="fade">
      <div class="container">
        <div class="row align-items-start align-items-md-center justify-content-end">
          <div class="col-md-5 text-center text-md-left pt-5 pt-md-0">
            <h1 class="mb-2">Reencontrate con tus espacios!</h1>
            <div class="intro-text text-center text-md-left">
              <p class="mb-4">Dale vida a tus espacios vacios o fuera de moda!</p>
              <p>
                <a href="/shop" class="btn btn-sm btn-primary">Tienda</a>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
        <div class="site-section block-3 site-blocks-2 bg-light">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-7 site-section-heading text-center pt-4">
            <h2>Productos Destacados</h2>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="nonloop-block-3 owl-carousel">

			  <%
			    data.rows.forEach(product => { %>
	              <div class="item">
	                <div class="block-4 text-center">
	                  <figure class="block-4-image">
	                    <img src="../../public/products_images/<%=product.id%>/<%=product.image%>" alt="<%=product.name%>" class="img-fluid">
	                  </figure>
	                  <div class="block-4-text p-4">
	                    <h3><a href="/shop"><%=product.name%></a></h3>
	                    <p class="mb-0"><%=product.description%></p>
	                    <p class="text-primary font-weight-bold">$<%=product.price%></p>
	                  </div>
	                </div>
	              </div>
				<% }); %>
            </div>
          </div>
        </div>
      </div>
    </div>
<%- include("./footer") %>