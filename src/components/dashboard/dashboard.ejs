<%- include("./header", {title: "Dashboard" }) %>

        <!-- page content -->
        <div class="right_col" role="main">
          <div class="">

            <div class="clearfix"></div>

            <div class="row">
                            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                  <div class="x_title">
                    <h2>Pedidos<small></small></h2>
                    <ul class="nav navbar-right panel_toolbox">
                      <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                      </li>
                      <li><a class="close-link"><i class="fa fa-close"></i></a>
                      </li>
                    </ul>
                    <div class="clearfix"></div>
                  </div>
                  <div class="x_content">
                      <div class="row">
                          <div class="col-sm-12">
                            <div class="card-box table-responsive">
                    <p class="text-muted font-13 m-b-30">
                      Aquí se muestran los pedidos de la plataforma.
                    </p>
                    <table id="datatable-buttons" class="table table-striped table-bordered" style="width:100%">
                      <thead>
                        <tr>
                          <th>ID</th>
                          <th>Nombre</th>
                          <th>Apellido</th>
                          <th>Email</th>
                          <th>Phone</th>
                          <th>Fecha</th>
                          <th>Precio</th>
                          <th>Código</th>
                          <th>Método de Pago</th>
                          <th>Nota</th>
                          <th>Items</th>
                        </tr>
                      </thead>
                      <tbody>
                        <%
                          data.pedidos.forEach(pedido => { %>
                            <tr>
                              <td><%=pedido.id%></td>
                              <td><%=pedido.name%></td>
                              <td><%=pedido.lastname%></td>
                              <td><%=pedido.mail%></td>
                              <td><%=pedido.phone%></td>
                              <td><%=pedido.date%></td>
                              <td><%=pedido.price%></td>
                              <td><%=pedido.codigo%></td>
                              <td><%=pedido.payment%></td>
                              <td><%=pedido.note%></td>
                              <td><%JSON.parse(pedido.items).forEach(item => { %>
                                <%=item.item%><strong> x <%=item.quantity%></strong><br>
                              <%})%></td>
                            </tr>
                          <%})
                        %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
                </div>
              </div>

              <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                  <div class="x_title">
                    <h2>Productos</h2>
                    <ul class="nav navbar-right panel_toolbox">
                      <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                      </li>
                      <li><a class="close-link"><i class="fa fa-close"></i></a>
                      </li>
                    </ul>
                    <div class="clearfix"></div>
                  </div>
                  <div class="x_content">
                      <div class="row">
                          <div class="col-sm-12">
                            <div class="card-box table-responsive">
                    <p class="text-muted font-13 m-b-30">
                      Aquí se muestran los productos de la plataforma.
                    </p>
          
                    <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                      <thead>
                        <tr>
                          <th>ID</th>
                          <th>Nombre</th>
                          <th>Descripcion</th>
                          <th>Precio</th>
                          <th>Visible</th>
                          <th>Descuento</th>
                          <th>Stock</th>
                          <th></th>
                          <th></th>
                        </tr>
                      </thead>
                      <tbody>
                        <%
                          data.productos.forEach(producto => { %>
                            <tr>
                              <td><%=producto.product_id%></td>
                              <td><%=producto.name%></td>
                              <td><%=producto.description%></td>
                              <td><%=producto.price%></td>
                              <td><%=producto.visible%></td>
                              <td><%=producto.discount%></td>
                              <td><%=producto.stock%></td>
                              <td><a href="/admin/dashboard/productos/<%=producto.id%>"><i class="fa fa-pencil"></i> Edit</a></td>
                              <td><a href="/admin/dashboard/productos/delete/<%=producto.id%>"><i class="fa fa-trash"></i> Delete</a></td>
                            </tr>
                          <%})
                        %>
                      </tbody>

                        <tr>
                          <td></td>
                          <td></td>
                          <td></td>
                          <td></td>
                          <td></td>
                          <td></td>
                          <td></td>
                          <td><a href="/admin/dashboard/productos/create"><i class="fa fa-plus"></i> Create</a></td>
                        </tr>
                    </table>
          
          
                  </div>
                </div>
              </div>
            </div>
                </div>
              </div>


              <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                  <div class="x_title">
                    <h2>Categorías</h2>
                    <ul class="nav navbar-right panel_toolbox">
                      <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                      </li>
                      <li><a class="close-link"><i class="fa fa-close"></i></a>
                      </li>
                    </ul>
                    <div class="clearfix"></div>
                  </div>
                  <div class="x_content">
                      <div class="row">
                          <div class="col-sm-12">
                            <div class="card-box table-responsive">
                    <p class="text-muted font-13 m-b-30">
                      Aquí se muestran las categorías de la plataforma.
                    </p>
          
                    <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                      <thead>
                        <tr>
                          <th>ID</th>
                          <th>Nombre</th>
                          <th>Descripcion</th>
                          <th></th>
                          <th></th>
                        </tr>
                      </thead>
                      <tbody>
                        <%
                          data.categories.forEach(category => { %>
                          <form action="/admin/dashboard/category/<%=category.id%>">
                            <tr>
                              <td><%=category.id%></td>
                              <td><%=category.name%></td>
                              <td><%=category.description%></td>
                              <td><a href="/admin/dashboard/category/<%=category.id%>"><i class="fa fa-pencil"></i> Edit</a></td>
                              <td><a href="/admin/dashboard/category/delete/<%=category.id%>"><i class="fa fa-trash"></i> Delete</a></td>
                            </tr>
                            </form>
                          <%})%>
                      </tbody>

                        <tr>
                          <td></td>
                          <td></td>
                          <td></td>
                          <td></td>
                          <td><a href="/admin/dashboard/category/create"><i class="fa fa-plus"></i> Create</a></td>
                        </tr>
                    </table>
          
          
                  </div>
                </div>
              </div>
            </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- /page content -->
<%- include("./footer") %>