<%- include("./header", {title: "Dashboard" }) %>
        <div class="right_col" role="main">
            <div class="clearfix"></div>
              <div class="col-md-6">
                <div class="x_panel">
                  <div class="x_title">
                    <h2>Form Basic Elements <small>different form elements</small></h2>
                    <ul class="nav navbar-right panel_toolbox">
                      <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                      </li>
                      <li><a class="close-link"><i class="fa fa-close"></i></a>
                      </li>
                    </ul>
                    <div class="clearfix"></div>
                  </div>
                  <div class="x_content">
                    <br />
                    <form class="form-horizontal form-label-left" action="/admin/dashboard/productos/create" method="post" enctype="multipart/form-data">

                      <div class="form-group row ">
                        <label class="control-label col-md-3 col-sm-3 ">Nombre <span class="required">*</span></label>
                        <div class="col-md-9 col-sm-9 ">
                          <input type="text" class="form-control" name="name" placeholder="Nombre" required>
                        </div>
                      </div>
                      <div class="item form-group">
                          <label class="control-label col-md-3 col-sm-3 ">Descripción <span class="required">*</span></label>
                        </label>
                        <div class="col-md-9 col-sm-9">
                          <textarea name="description" id="message" required class="form-control" name="message" data-parsley-trigger="keyup" data-parsley-minlength="20" data-parsley-minlength-message="Mínimo 20 caracteres! Vamos que falta poco!"
                            data-parsley-validation-threshold="10"></textarea>
                        </div>
                      </div>
                      <div class="form-group row ">
                        <label class="control-label col-md-3 col-sm-3 ">Precio <span class="required">*</span></label>
                        <div class="col-md-9 col-sm-9 ">
                          <input type="number" class="form-control" name="price" required>
                        </div>
                      </div>
                      <div class="form-group row ">
                        <label class="control-label col-md-3 col-sm-3 ">ID de Producto <span class="required">*</span></label>
                        <div class="col-md-9 col-sm-9 ">
                          <input type="number" class="form-control" name="product_id" required>
                        </div>
                      </div>
                      <div class="form-group row">
                        <label class="control-label col-md-3 col-sm-3 ">Categoría</label>
                        <div class="col-md-9 col-sm-9 ">
                          <select name="category" class="form-control">
                          	<%data.categories.forEach(category => { %>
	                          	<option value="<%=category.id%>"><%=category.name%></option>
                          	<%})%>
                          </select>
                        </div>
                      </div>
                      <div class="form-group row">
                        <label class="control-label col-md-3 col-sm-3 ">Imagen <span class="required">*</span></label>
                        <div class="col-md-9 col-sm-9 ">
                        	<input type="file" name="image" required>
                        </div>
                      </div>
                      <!-- 
                      <div class="form-group row">
                        <div class="col-md-9 col-sm-9 ">
                          <div class="">
                            <label>
                              <input type="checkbox" class="js-switch" checked /> Visible
                            </label>
                          </div>
                        </div>
                      </div> -->
                      <div class="ln_solid"></div>
                      <div class="form-group">
                        <div class="col-md-9 col-sm-9  offset-md-3">
                          <a href="/admin/dashboard" class="btn btn-primary">Cancel</a>
                          <button type="submit" class="btn btn-success">Agregar</button>
                        </div>
                      </div>

                    </form>
                  </div>
                </div>
              </div>

<%- include("./footer") %>